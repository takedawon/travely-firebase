<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/nav_auth"
            app:startDestination="@id/loginFragment">

    <fragment
        android:id="@+id/loginFragment"
        android:name="com.lanic.travely.ui.login.LoginFragment"
        android:label="LoginFragment"
        tools:layout="@layout/fragment_login">
        <action
            android:id="@+id/action_to_registerTypeSelect"
            app:destination="@id/registerTypeSelectFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim"/>
    </fragment>
    <fragment
        android:id="@+id/registerTypeSelectFragment"
        android:name="com.lanic.travely.ui.login.RegisterTypeSelectFragment"
        android:label="RegisterTypeSelectFragment"
        tools:layout="@layout/fragment_register_type_select">
        <action
            android:id="@+id/action_to_registerEmail"
            app:destination="@id/registerEmailFragment"/>
    </fragment>
    <fragment
        android:id="@+id/registerEmailFragment"
        android:name="com.lanic.travely.ui.login.RegisterEmailFragment"
        android:label="RegisterEmailFragment"
        tools:layout="@layout/fragment_register_email">
        <action
            android:id="@+id/action_to_registerNickname"
            app:destination="@id/registerNicknameFragment"/>
    </fragment>
    <fragment
        android:id="@+id/registerNicknameFragment"
        android:name="com.lanic.travely.ui.login.RegisterNicknameFragment"
        android:label="RegisterNicknameFragment"
        tools:layout="@layout/fragment_register_nickname">
        <action
            android:id="@+id/action_to_registerBirth"
            app:destination="@id/registerBirthFragment"/>
        <argument
            android:name="registerData"
            app:argType="com.lanic.travely.data.RegisterData"/>
    </fragment>
    <fragment
        android:id="@+id/registerBirthFragment"
        android:name="com.lanic.travely.ui.login.RegisterBirthFragment"
        android:label="RegisterBirthFragment"
        tools:layout="@layout/fragment_register_birth">
        <action
            android:id="@+id/action_to_registerPassword"
            app:destination="@id/registerPasswordFragment"/>
        <argument
            android:name="registerData"
            app:argType="com.lanic.travely.data.RegisterData"/>
    </fragment>
    <fragment
        android:id="@+id/registerPasswordFragment"
        android:name="com.lanic.travely.ui.login.RegisterPasswordFragment"
        android:label="RegisterPasswordFragment"
        tools:layout="@layout/fragment_register_password">
        <action
            android:id="@+id/action_to_registerComplete"
            app:destination="@id/registerCompleteFragment"/>
        <argument
            android:name="registerData"
            app:argType="com.lanic.travely.data.RegisterData"/>
    </fragment>
    <fragment
        android:id="@+id/registerCompleteFragment"
        android:name="com.lanic.travely.ui.login.RegisterCompleteFragment"
        android:label="RegisterCompleteFragment"
        tools:layout="@layout/fragment_register_complete"/>
</navigation>